{
  "name": "User",
  "schema": {
    "firstName": {
      "type": "String",
      "trim": true
    },
    "lastName": {
      "type": "String",
      "trim": true
    },
    "email": {
      "type": "String",
      "match": "^([\\w-\\.\\+]+@([\\w-]+\\.)+[\\w-]{2,4})?"
    },
    "password": {
      "type": "String",
      "required": true,
      "minlength": 5
    },
    "role": {
      "type": "String",
      "required": true
    }
  }
}